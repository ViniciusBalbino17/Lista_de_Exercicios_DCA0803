#include <stdio.h>
#include <stdlib.h>

int main(void) {

  int i = 0, j = 0, n = 3, aux; // n = quantidade de elementos
  printf("Quantos elementos serao ordenadados? ");
  scanf("%d",&n);
  float *x;
  
  for(i = 0 ; i < n ; i++)
  {
    printf("\nDigite o %dÂº numero - ",i+1);
    scanf("%f",&x[i]);
  }

  for(i = 0 ; i < n ; i++){
    for(j = i ; j < n; j++){
      if (*(x + i) > *(x + j)){
        aux = *(x + i);
        *(x + i) = *(x + j);
        *(x + j) = aux;
        }
      }
    }

  printf("Ordenando os elementos, tem-se:\n");
  for (i = 0 ; i < n ; i++)
    printf("%g\n",*(x + i));

  return 0;
}
